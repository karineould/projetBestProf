{% extends 'connexion.twig' %}


<!-- Header -->
{% block menu %}
<header id="header" class="alt">
    <h1 style=" font-size: 15px;"><a href="/">MyBestProf</a> by TEAM 2</h1>
    <nav id="nav">
        <ul>
            <li><a href="/">Votre offre</a></li>
            <li><a href="/profil" class="button">Mon profil</a></li>
            <li><a href="/accueuil" class="button">Accueuil</a></li>
        </ul>
    </nav>
</header>
{% endblock %}


{% block classContainer %}
<div class="container">
    <div class="row">
        <div class="col-sm-10 form-box" style="width: 100%; opacity:5; color : white;">
            <div class="form-top" style="text-align : center;">
                <h1 style="color:white;">Votre Offre</h1>
            </div>

            <div class="form-bottom">
                <form role="form" action="/inscription-etablissement-done" method="post" class="login-form">
                    <div class="row uniform 100%">
                        <div class="-4u 4u">
                            <label style="color : white;">Description de l'offre</label>
                            <textarea name="offre" id="offre" col="30" rows="5" wrap="hard" placeholder="Déscriptif de l'offre" maxlength="350"></textarea>
                        </div>
                        
                    </div>
                    <div class="row uniform 100%">
                        <div class="-4u 4u">
                            <label style="color : white;">Compétances requise exigée</label>
                            <textarea name="competance" cols="30" id="competance" wrap="hard" col="30" rows="5" placeholder="Compétances requise ?" maxlength="100" ></textarea>
                            
                        </div>
                        
                    </div>
                    
                    <br>
                    <div class="form-group -4u 4u">
                        <button type="submit" class="btn" style="background: #00CC66;"><a href="/formulaire_etablissement">Rédiger un formulaire</a></button>
                    </div>

                    <div class="form-group -4u 4u">
                        <button type="button" class="btn" style="background: #cc521a;">Poster l'offre</button>
                    </div>


                </form>

            </div>
        </div>
    </div>
</div>
{% endblock %}