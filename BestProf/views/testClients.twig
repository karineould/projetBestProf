{% extends 'accueil.twig' %}


{% block menu %}
    <header id="header" class="alt">
        <nav id="nav">
            {% if admin == 2 %}
                <ul>
                    <li><a href="/etablissements/accueil"><strong>Accueil</strong></a></li>
                    <li><a href="/etablissements/mes-offres"><strong>Mes offres</strong></a></li>
                    <li><a href="/etablissements/candidats"><strong>Candidats</strong></a></li>
                    <li><a href="/etablissements/mon-profil"><strong>Mon profil</strong></a></li>
                    <li><a href="/logout" class="button"><strong>Deconnexion</strong></a></li>
                </ul>
            {% else %}
                <ul>
                    <li><a href="/enseignants/accueil"><strong>Accueil</strong></a></li>
                    <li><a href="/enseignants/offres"><strong>Offres</strong></a></li>
                    <li><a href="/enseignants/mon-profil"><strong>Mon profil</strong></a></li>
                    <li><a href="/logout" class="button"><strong>Deconnexion</strong></a></li>
                </ul>
            {% endif %}
        </nav>
    </header>
{% endblock %}

{% block bannerInner %}


    <h1 style="color: #fff;">MyBestProf - Mes offres</h1>

    <div class="container">
        <div class="row">
            <div class="col-sm-12 form-box">

                <div class="form-top">
                    <div class="form-top-left">
                        <h3>Liste des candidats: </h3>
                    </div>

                    <div class="form-top-right">
                        <i class="fa fa-list"></i>
                    </div>

                </div>

                <div class="form-bottom">

                    {% if clients %}
                        <table class="table custom">
                            <thead>
                            <tr>
                                <th style="color : white;">Nom</th>
                                <th style="color : white;">Prénom</th>
                                <th style="color : white;">Date de Naissance</th>
                                <th style="color : white;">Ville</th>
                                <th style="color : white;">Code Postal</th>
                                <th style="color : white;">Telephone</th>
                                
                            </tr>
                            </thead>
                            <tbody>
                            {% for Client in clients %}
                                <tr>
                                    <th scope="row">{{ Client.lastName_client }}</th>
                                    <th scope="row">{{ Client.firstName_client }}</th>
                                    <th scope="row">{{ Client.birthday_client }}</th>
                                    <th scope="row">{{ Client.ville_client}}</th>
                                    <th scope="row">{{ Client.cp_client}}</th>
                                    <th scope="row">{{ Client.telephone_client }}</th>

                                        <td>
                                            <a href="#">Aller sur son profil</a>
                                        </td>
                                   
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {% else %}
                            <h3 class="-5u">Aucun candidat trouvé!</h3>
                        {% endif %}

                    <div class="form-group -4u 5u">
                        <a href="/etablissements/accueil" class="btn" style="background: #00CC66;">Retour à l'accueil</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
