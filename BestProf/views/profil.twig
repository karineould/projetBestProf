{% extends 'connexion.twig' %}

<!-- Header -->
{% block menu %}
<header id="header" class="alt">
    <h1 style=" font-size: 15px;"><a href="/">MyBestProf</a> by TEAM 2</h1>
    <nav id="nav">
        <ul>
            <li><a href="/">Mon Etablissement</a></li>
            <li><a href="/inscription" class="button">Offre</a></li>
            <li><a href="/test" class="button">Test</a></li>
        </ul>
    </nav>
</header>
{% endblock %}


{% block classContainer %}
<div class="container">
    <div class="row">
        <div class="col-sm-10 form-box" style="width: 100%; opacity:5; color : white;">
            <div class="form-top" style="text-align : center;">
                <h1 style="color:white;">Votre Profil</h1>
            </div>

            <div class="form-bottom">
                <form role="form" action="/inscription-etablissement-done" method="post" class="login-form">
                    <div class="row uniform 50%">
                        <div class="-1u 5u">
                            <label style="color:white;">Information Ã©tablissement : </label>
                            {% if dataForm %}
                            <p>{{ dataForm.etablissementName }}</p>
                            <input type="hidden" name="etablissementName" value="{{ dataForm.etablissementName }}"/>
                            {% endif %}
                            {% if dataForm.etablissementAddress %}
                            <p>{{ dataForm.etablissementAddress }}</p>
                            <input type="hidden" name="etablissementAddress" value="{{ dataForm.etablissementAddress }}"/>
                            {% endif %}
                            {% if dataForm.etablissementVille %}
                            <p>{{ dataForm.etablissementVille }}</p>
                            <input type="hidden" name="etablissementVille" value="{{ dataForm.etablissementVille }}"/>
                            {% endif %}
                            {% if dataForm.etablissementCp %}
                            <p>{{ dataForm.etablissementCp }}</p>
                            <input type="hidden" name="etablissementCp" value="{{ dataForm.etablissementCp }}"/>
                            {% endif %}
                        </div>

                        <div class="-1u 5u">
                            <label style="color:white;">Information utilisateur : </label>
                            {% if dataForm.etablissementFirstname and dataForm.etablissementLastname %}
                            <p>{{ dataForm.etablissementFirstname }} {{ dataForm.etablissementLastname }}</p>
                            <input type="hidden" name="etablissementFirstname" value="{{ dataForm.etablissementFirstname }}"/>
                            <input type="hidden" name="etablissementLastname" value="{{ dataForm.etablissementLastname }}"/>
                            {% endif %}
                            {% if dataForm.etablissementPoste %}
                            <p>{{ dataForm.etablissementPoste }}</p>
                            <input type="hidden" name="etablissementPoste" value="{{ dataForm.etablissementPoste }}"/>
                            {% endif %}
                        </div>
                    </div>
                    <div class="row uniform 100%">
                        <div class="-1u 5u">    
                            <input type="text" placeholder="texte 1 ?">
                        </div>
                        <div class="5u">
                            <input type="text" placeholder="texte 2 ?">
                        </div>
                    </div>
                    <br>
                    <div class="form-group -4u 4u">
                        <button type="submit" class="btn" style="background: #00CC66;">Poster une offre</button>
                    </div>

                    <div class="form-group -4u 4u">
                        <button type="button" class="btn" style="background: #cc521a;">Modifier</button>
                    </div>


                </form>

            </div>
        </div>
    </div>
</div>
{% endblock %}










