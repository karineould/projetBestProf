{% extends 'connexion.twig' %}


{% block classContainer %}
<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">
            <h1><strong>MyBestProf</strong> - Formulaire d'informations professeurs </h1>
            <div class="description">
                <p>
                    <a href="http://azmind.com"><strong></strong></a>
                </p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 form-box" style="margin-left: 10%; width: 85%;">
            <div class="form-top">
                <div class="form-top-left">
                    <h3>Formulaire</h3>
                    <p>Afin de mieux de vous trouver des offres d'emploi pertinente, veuillez remplir ce formulaire d'informations :</p>

                    <label style="color: #ff0000; font-weight: bold;" ></label>

                </div>
                <div class="form-top-right">
                    <i class="fa fa-bookmark"></i>
                </div>
            </div>
            <div class="form-bottom">  
                <form class="form-horizontal">
                    <fieldset>

                        <!-- Form Name -->
                        <legend>Formulaire d'informations</legend>

                        <!-- Select Basic -->
                        <div class="form-group">
                            <label class="col-md-4" for="selectbasic"><p style="color:white">Quelle matière souhaiteriez-vous enseigner :</p></label>
                            <div class="col-md-4">
                                <select id="selectbasic" name="selectbasic" class="form-control">
                                    <option value="1">Français</option>
                                    <option value="2">Maths</option>
                                    <option value="3">SVT</option>
                                    <option value="4">Physiques - Chimie</option>
                                    <option value="5">Philosophie</option>
                                    <option value="6">Histoire - Géographie</option>
                                    <option value="7">Anglais</option>
                                    <option value="8">Allemand</option>
                                    <option value="9">Espagnol</option>
                                </select>
                            </div>
                        </div>    

                        <!-- Select Basic -->
                        <div class="form-group">
                            <label class="col-md-4"><p style="color:white">Niveau d'étude</p></label>
                            <div class="col-md-4">
                                <select id="selectbasic" name="selectbasic" class="form-control">
                                    <option value="1">Bac +1</option>
                                    <option value="2">Bac +2</option>
                                    <option value="3">Bac +3</option>
                                    <option value="4">Bac +4</option>
                                    <option value="5">Bac +5</option>
                                </select>
                            </div>
                        </div>
                        <legend></legend>
                        <!-- Multiple Radios -->
                        <form>
                            <div class="form-group">
                                <label class="col-md-4" for="radios"><p style="color:white; font-family:arial">Avez-vous déjà enseigné ou travaillé avec des enfants auparavant ?</p></label>
                                <div class="col-md-4">
                                    <div class="radio">
                                        <div>
                                            <input type="radio" name="radios" id="radios-0" value="1" checked="checked">
                                            Oui
                                        </div>
                                    </div>
                                    <div class="radio">
                                        <div>

                                            <input type="radio" name="radios" id="radios-1" value="2">Non                                     
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4" for="textinput"><p style="color:white">Si oui, indiquez dans quel(s) établissement(s) et combien de temps:</p></label>  
                            <div class="col-md-4">
                                <input id="textinput" name="textinput" type="text" placeholder="Etablissement" class="form-control input-md"> 
                            </div>
                        </div>
                        <legend></legend>
                        <!-- Multiple Radios -->
                        <div class="form-group">
                            <label class="col-md-4" for="radios"><p style="color:white">Avez-vous déjà accompli une formation « pédagogique » ?</p></label>
                            <div class="col-md-4">
                                <label class="radio-inline">
                                    <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1"> Oui
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2"> Non
                                </label>
                            </div>
                        </div>




                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="textinput"><p style="color:white">Si oui, indiquez la durée et l’intitulé de la formation</p></label>  
                            <div class="col-md-4">
                                <input id="textinput" name="textinput" type="text" placeholder="texte..." class="form-control input-md"> 
                            </div>
                        </div>




                        <legend></legend>



                        <div class="form-group">
                            <label class="col-md-4 control-label" for="filebutton"><p style="color:white">Pour finir, ajoutez ici les documents de votre choix qui apparaitront dans votre profil (Cv, vidéo de présentation, diplômes…)</p></label>
                            <div class="col-md-4">
                                <input id="filebutton" name="filebutton" class="input-file" type="file">
                            </div>
                        </div>
                        <legend></legend>
                    </fieldset>
                </form>
                <div style="text-align:center">
                    <button type="button" class="btn btn-success">Valider</button>
                </div>
            </div>       

        </div>
    </div>

</div>
{% endblock %}